{
   "name": "formula1-graph-names",
   "version": "1.0.3",
   "description": "A Library to Perform Graphing between Multiple Drivers of Formula One",
   "main": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1",
      "build": "tsc",
      "start": "nodemon --watch dist ./dist/run.js",
      "deploy": "node ./dist/run.js",
      "lint": "eslint --cache --max-warnings=0 --fix lib",
      "format": "prettier --ignore-path .gitignore --write lib"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/pratikpc/formula1-graph-names/"
   },
   "keywords": [
      "Formula One",
      "Formula 1",
      "FIA",
      "Graph"
   ],
   "homepage": "https://github.com/pratikpc/formula1-graph-names/",
   "author": "Pratik Chowdhury (pratikc@live.co.uk)",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/pratikpc/formula1-graph-names/issues"
   },
   "devDependencies": {
      "@types/express": "^4.17.7",
      "@typescript-eslint/eslint-plugin": "^3.9.1",
      "@typescript-eslint/parser": "^3.9.1",
      "eslint": "^7.7.0",
      "eslint-config-airbnb-typescript": "^9.0.0",
      "eslint-config-prettier": "^6.11.0",
      "eslint-plugin-eslint-comments": "^3.2.0",
      "eslint-plugin-import": "^2.22.0",
      "eslint-plugin-promise": "^4.2.1",
      "eslint-plugin-svelte3": "^2.7.3",
      "husky": "^4.2.5",
      "lint-staged": "^10.2.11",
      "nodemon": "^2.0.4",
      "prettier": "^2.0.5",
      "svelte": "^3.24.1",
      "typescript": "^4.0.2"
   },
   "prettier": {
      "trailingComma": "none",
      "printWidth": 80,
      "proseWrap": "preserve",
      "semi": true,
      "singleQuote": true,
      "useTabs": false,
      "tabWidth": 3,
      "arrowParens": "avoid"
   },
   "dependencies": {
      "@types/cheerio": "^0.22.21",
      "@types/lodash": "^4.14.159",
      "@types/mkdirp": "^1.0.1",
      "@types/node": "^14.6.0",
      "axios": "0.19.0",
      "cheerio": "^1.0.0-rc.3",
      "dotenv": "^8.2.0",
      "formula1-extract-driver-pairs": "^1.0.12",
      "lodash": "^4.17.20"
   },
   "eslintConfig": {
      "root": true,
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
         "tsconfigRootDir": ".",
         "project": [
            "tsconfig.json"
         ]
      },
      "rules": {
         "@typescript-eslint/explicit-module-boundary-types": "off",
         "object-shorthand": [
            "error",
            "never"
         ],
         "import/no-extraneous-dependencies": [
            "error",
            {
               "devDependencies": true
            }
         ],
         "no-return-await": "off",
         "import/newline-after-import": "off",
         "import/no-mutable-exports": 0,
         "no-labels": 0,
         "no-prototype-builtins": "off",
         "no-console": "off",
         "no-restricted-syntax": 0,
         "max-classes-per-file": [
            "error",
            4
         ],
         "@typescript-eslint/lines-between-class-members": [
            "error",
            "always",
            {
               "exceptAfterSingleLine": true
            }
         ],
         "lines-between-class-members": [
            "error",
            "always",
            {
               "exceptAfterSingleLine": true
            }
         ],
         "guard-for-in": "off"
      },
      "plugins": [
         "@typescript-eslint",
         "svelte3"
      ],
      "extends": [
         "airbnb-typescript/base",
         "plugin:@typescript-eslint/recommended",
         "plugin:eslint-comments/recommended",
         "plugin:promise/recommended",
         "prettier",
         "prettier/@typescript-eslint"
      ],
      "overrides": [
         {
            "files": [
               "**/*.svelte"
            ],
            "processor": "svelte3/svelte3"
         }
      ]
   },
   "engines": {
      "node": ">=12.0"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged",
         "pre-push": "lint-staged"
      }
   },
   "lint-staged": {
      "*.ts": [
         "npm run lint"
      ],
      "*.{md,json,yml,ts}": [
         "npm run format"
      ]
   },
   "settings": {
      "import/resolver": {
         "node": {
            "extensions": [
               ".MD",
               ".ts",
               ".json"
            ]
         }
      },
      "import/extensions": [
         ".MD",
         ".ts",
         ".json"
      ]
   }
}
